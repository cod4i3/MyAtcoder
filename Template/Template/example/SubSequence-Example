// 尺取り法の一例
// 2の例はABC38-Cを参照
#include <algorithm>
#include <cstdio>
#include <iostream>
#include <vector>
using namespace std;
using ll = long long;
const int MAX_N = 100000;
int n, S;
vector<int> a(MAX_N);

void solve() {
  int res = n + 1;
  int l = 0, r = 0, sum = 0;
  
  while (true) {
    while (r < n && sum < S) {
      sum += a[r++];
    }

    if (sum < S) break;
    res = min(res, r - l);
    sum -= a[l++];
  }

  if (res > n) {
    // 解が存在しない
    res = 0;
  }

  printf("%d\n", res);
}

int main() {
  cin >> n >> S;

  for (int i = 0; i < n; i++) cin >> a[i];

  solve();
  return 0;
}